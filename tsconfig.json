{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "baseUrl": "./src", 
    "allowJs": true, 
    "declaration": true, 
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*.ts", "config/**/*.js"],
  "exclude": ["node_modules"]
}
